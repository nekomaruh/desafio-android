<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Left side description -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <!-- Repository title -->
        <TextView
            android:id="@+id/id_repo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/text_title"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="Nombre Repositorio"/>

        <!-- Repository subtitle -->
        <TextView
            android:id="@+id/id_repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/text_description"
            android:text="Descripcion del repo, Lorem Ipsum ksjdklasjdklajsd"/>

        <!-- Subtitle icons fork/star -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_code_branch_solid"
                app:tint="@color/amber"/>

            <TextView
                android:id="@+id/id_branches_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/amber"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:paddingEnd="15dp"
                android:text="640"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_star_solid"
                app:tint="@color/amber"/>

            <TextView
                android:id="@+id/id_starred_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/amber"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:text="98"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Right side description -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_repo_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@color/amber"/>
        <TextView
            android:id="@+id/id_repo_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="username"
            android:ellipsize="end"
            android:textColor="@color/indigo"/>
        <TextView
            android:id="@+id/id_repo_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="nombre real"
            android:textSize="@dimen/text_small_description"
            android:textColor="@color/grey"/>
    </LinearLayout>




</LinearLayout>